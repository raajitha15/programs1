import java.util.Scanner;
class Program2 
{
	public static void main(String[] args) 
	{
		int num,digit,sum=0;
		Scanner sc=new Scanner(System.in);
		System.out.println("enter the number");
		num=sc.nextInt();
		int copynum=num;
		do
		{
			digit=num%10;
			sum=sum+digit;
			num=num/10;
		}
		while (num!=0);
		System.out.println("the sum of the digit are:"+copynum+ "is" +sum);
	}
}
